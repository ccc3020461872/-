.popup {
  background-color: rgba(0, 0, 0, .6);
  position: fixed;
  z-index: 999;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
}
.popup .choose {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  color: #333333;
  font-weight: 700;
}
.popup .cancel {
  height: 90rpx;
  border-top: 10rpx solid #e8e7ed;
  font-size: 36rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border-top: 1px solid #f8f8f8;
}
.item .text {
  position: relative;
}
.item image {
  width: 130rpx;
  position: absolute;
  right: -130rpx;
  top: -40rpx;
}
/* .......type === 1 .........*/
.choose1 {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.choose1 .title {
  font-size: 36rpx;
  color: #000000;
  font-weight: 700;
  display: flex;
  flex-direction: row-reverse;
  padding: 32rpx 27rpx 40rpx 27rpx;
}
.choose1 .title text {
  flex: 1;
  text-align: right;
}
.choose1 .title text:first-child {
  color: #8A8A8A;
}
 .imgList {
  max-height: 450rpx;
  overflow: auto;
}
.imgitem {
  display: block;
  width: 680rpx;
  height: 220rpx;
  margin: auto;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.confirm {
  font-weight: 700;
  font-size: 36rpx;
  text-align: center;
  width: 100%;
  height: 112rpx;
  text-align: center;
  line-height: 112rpx;
  border-top: 1px solid #D5D5D5;
}
.itemBox {
  position: relative;

}
.itemBox radio {
  position: absolute;
  right: 52rpx;
  top: 23rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%; 
  line-height: 35rpx;
  text-align: center;
  font-size: 30rpx;       /* 勾大小 */
  color: #1e5051;            /* 白色勾  */
  transform: translate(-50%, -50%), scale(1)
}
/* ***** type === 2 ****** */
.choose2 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  width: 92%;
  border-radius: 20rpx;
}
.choose2 .title {
  font-size: 40rpx;
  color: #122F30;
  text-align: center; 
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  font-weight: 700;
}
.choose2 .imgList1 {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 0 34rpx;
  max-height: 400rpx;
  overflow: auto;
}
.choose2 .itemBox1 {
  position: relative;
  margin: 0 27rpx 27rpx 0;
}
.choose2 .imgitem1 {
  width: 190rpx;
  height: 150rpx;
}
.choose2 .itemBox1:nth-child(3n){
  margin-right: 0;
}
.choose2 .imgitem1 radio {
  position: absolute;
  right: 5rpx;
  top: 8rpx;
}
.chooseType {
  height: 120rpx;
  border-top: 1px solid #dadada;
  display: flex;
  justify-content: space-between;
}
.chooseType text{ 
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
.chooseType text:first-child {
  border-right: 1px solid #dadada;
  color: #929292;
}
.chooseType text:last-child {
  color: #122F30;
}
