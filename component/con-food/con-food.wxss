/* component/con-food/con-food.wxss */
@import'/weui.wxss';
.summary{
  margin-bottom: 150rpx;
}
page{
  font-size: 33rpx;
}
.search{
  width:94%;
  height: 70rpx;
  display: flex;
  margin: 0 auto;
  margin-top: 10rpx;
}
.search-input{
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:rgb(240, 240, 240);
  border-radius:35rpx ;
  color: #666;
  position: relative;
  padding-left: -20rpx;
}
.placeholder{
  font-size: 28rpx;
  color: #888;
}
.sach{
  position: absolute;
  z-index: 1000;
  width: 30rpx;
  top: 20rpx;
  left: 30rpx;
}
  
.search-btn{
  color: var(--themecolor);
  padding: 10rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.boxContent{
  width: 100%;
  /* display: flex; */
  align-items: center;
  white-space: nowrap;
  position: fixed;
  top: 110rpx;
  background-color: #fff;
  height: 160rpx;
}
.boxItem{
  font-size: 28rpx;
  display: inline-block;
  margin-left: 30rpx;
  color: #666;
  height: 50rpx;
}
.boxItem:last-child{
  margin-right: 30rpx;
}
.boxItemAcitity{
  position: relative;
  color: #333;
}
.boxItemAcitity::after{
  content: '';
  position: absolute;
  bottom: 10rpx;
  background-color: var(--themecolor);
  height: 6rpx;
  left: 0;
  right: 0;
  border-radius: 8rxp;
  z-index: -1;
}
.item{
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 10rpx solid #f4f4f4;
}
.foodImg{
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid var(--themecolor);
  border-radius: 15rpx;
}
.productName{
   font-size: 30rpx;
   font-weight: bold;
   width: 100%;
}
.price{
  font-size: 28rpx;
  color: red;
  margin-top: 20rpx;
}
.price text{
  font-size: 22rpx;
}
.productInfo{
  width: 65%;
 margin-left: 20rpx;
}
.operate{
  width: 137rpx;
  height: 80rpx;
}
.grap{
  width: 100%;
  background-color: #eee;
  height: 5rpx;
}
.bottom span{
  color: #eee;
  line-height: 80rpx;
  padding: 10rpx 0;
 }
.bottom{
  display: flex;
  justify-content:space-around;
  position: fixed;
  bottom: 120rpx;
  height: 90rpx;
  width: 100%;
  border-top: 1rpx solid #eee;
  align-items: center;
  color: var(--themecolor);
  background-color: #fff;
  font-size: 28rpx;
}
.top{
  font-size: 28rpx;
  color: var(--themecolor);
  position: absolute;
  height: 40rpx;
  right: 40rpx;
}



.tableTe{
  color: var(--themecolor);
  padding:0;
  margin:0;
}