/* 背景颜色 */
page {
  background-color: #fff;
}

.backBox {
  height: 90rpx;
  width: 100%;
  position: absolute;
  z-index: -1;
}

/* 内容区 */
.content {
  background-color: #fff;
  border-top-right-radius: 80rpx;
  border-top-left-radius: 80rpx;
  padding: 60rpx 7%;
  overflow: hidden;
  box-sizing: border-box;
}

.box {
  min-height: 10vh;
}

.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #CECECE;
  margin-bottom: 44rpx;
}

.textarea {
  width: 550rpx;
  height: 40rpx;
  max-height: 120rpx;
}

.item1,
.indexSwiper {
  border-bottom: 1px solid #CECECE;
  padding-bottom: 40rpx;
  margin-bottom: 70rpx;
}

.item .left .title,
.item1 .left .title {
  font-size: 37rpx;
  font-weight: 700;
  color: #333;
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}

.section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left .right-img {
  width: 16rpx;
  height: 28rpx;
  margin-left: 20rpx;

}

.item .right .upload {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  background-color: #F6F6F6;
}

.item .right .upload image {
  width: 100%;
  height: 100%;
  margin-bottom: 13rpx;
}

.colorList {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}

.colorList .colorItem {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 56rpx;
  position: relative;
}

.colorList .colorItem .radius {
  position: absolute;
  bottom: -18rpx;
  right: -18rpx;
  background-color: #fff;
  padding-left: 4rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.colorList .colorItem:nth-child(4n) {
  margin-right: 0rpx;
}

.indexSwiper .title {
  display: flex;
  justify-content: space-between;
  font-weight: 700;
  font-size: 37rpx;
}

.subtitle {
  display: flex;
  align-items: center;
}

.subtitle text {
  margin-right: 22rpx;
  padding: 4rpx 16rpx;
  border: 1px solid;
  font-size: 30rpx;
  font-weight: 700;
}

.buttons {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 68rpx;
  margin-bottom: 110rpx;
}

.buttons .cc-center {
  width: 300rpx;
  height: 100rpx;
  font-size: 42rpx;
  border-radius: 50rpx;
  font-weight: 700;
}

.buttons .pre {
  border: 1px solid;
}

.buttons .submit {
  color: #fff;
}

.example {
  width: 80rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #FBF9FA;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: 700;
}

.upload {
  width: 134rpx;
  height: 134rpx;
  display: flex;
  align-items: center;
}

.limit {
  font-size: 24rpx;
}

.swiperImg {
  /* width: 680rpx; */
  width: 100%;
  height: 540rpx;
  margin: 24rpx auto;
  border-radius: 20rpx;
}

.swiperImg1 {
  /* width: 690rpx; */
  width: 100%;
  height: 216rpx;
  margin: 24rpx auto;
  border-radius: 20rpx;
}

.cc-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.red-text {
  color: red;
}