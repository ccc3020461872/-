.goodsImg {
  width: 100%;
}
button {
  color: #fff;
  position: fixed;
  bottom: 16%;
  left: 50%;
  transform: translateX(-50%);
  width: 360rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  font-size: 48rpx;
}
.number {
  font-size: 24rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 5%;
}
.number text:first-child {
  font-weight: 700;
  color: #000;
}
.number text:last-child {
  color: #ccc;
}
swiper{
  position: fixed;
  width: 100%;
  height: 564rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}