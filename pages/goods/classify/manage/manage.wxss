/* 背景颜色 */
page {
  background-color: #fff;
}
.backBox {
  height: 90rpx;
  width: 100%;
  position: absolute;
  z-index: -1;
}
/* 内容区 */
.content {
  background-color: #fff;
  border-top-right-radius: 80rpx;
  border-top-left-radius: 80rpx;
  padding: 60rpx 34rpx 0 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  width: 100%;
  position: relative;
}
.box {
  min-height: 10vh;
  margin-top: 120rpx;
  max-height: 61vh;
  overflow: auto;
}
.empty {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  color: #808080;
  font-size: 36rpx;
  font-weight: 600;
}
/* 分类排序 添加分类 */
.box .btns{
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  flex-direction: row-reverse;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  padding: 60rpx 34rpx 0 20rpx;
}
.box .btns .sort,
.box .btns .add {
  width: 180rpx;
  height: 76rpx;
  border-radius: 76rpx;
}
.box .btns .sort {
  color: #CCCCCC;
  background-color: #F4F4F4;
}
.box .btns .add {
  border: 1px solid;
  margin-left: 40rpx;
}
/* 输入分类名称 */
.inputClassify {
  padding-bottom: 8rpx;
  border-bottom: 1px solid #CECECE;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  height: 100rpx;
}
.inputClassify input{
  font-size: 36rpx;
  max-width: 70%;
}
.inputClassify text {
  font-size: 36rpx;
  max-width: 80%;
}
.inputClassify image{
  height: 90rpx;
}
.placeholder {
  color: #D0D0D0;
}
/* 新建商品 */
.built {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  position: fixed;
  bottom: 140rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 128rpx;
  box-sizing: border-box;
  width: 300rpx;
  height: 108rpx;
}
.upDown image{
  width: 36rpx;
}
.upDown image:first-child {
  margin-right: 44rpx;
}