/* pages/mine/web-view/web-view.wxss */

page {
  background-color: #f4f4f4;
}

.box {}

.text {
  font-size: 28rpx;
  color: #888;
  line-height: 40rpx;
}

.section {
  padding: 20rpx 3%;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.section text>text {
  color: red;
  font-size: 20rpx;
}

.section input {
  height: 80rpx;
}

.section textarea {
  width: 96%;
  padding: 20rpx 2%;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: #f4f4f4;
}

.section1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 3%;
}

.section1 input {
  width: 70%;
  padding-left: 2%;
  text-align: right;
}

.section .note-num {
  display: block;
  text-align: right;
  background-color: #f4f4f4;
  padding: 20rpx;
  color: #888;
}

.page-section {
  margin-top: 20rpx;
  border: 1rpx solid rgb(179, 178, 178);
}

.weui-cell {
  display: flex;
  height: 80rpx;
  align-items: center;
  border-bottom: 1rpx solid rgb(179, 178, 178);

}

.weui-cell radio {
  transform: scale(0.8)
}

.weui-cell__hd {
  margin-left: 20rpx;
}

.weui-cell__bd {
  margin-left: 20rpx;
}

.imgList {
  padding-top: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.imgList image {
  width: 200rpx;
  height: 200rpx;
  /* margin-right: 30rpx; */
  margin-bottom: 30rpx;
  border-radius: 15rpx;
}

.butform {
  width: 100%;
  margin-top: 80rpx;
  line-height: 70rpx;
  background: var(--themecolor);
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  border-radius: 50rpx;
  position: fixed;
  left: 5%;
  bottom: 100rpx;
}

.imgList .del {

  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: -110rpx;
  right: 20rpx;
  margin: 0;
}