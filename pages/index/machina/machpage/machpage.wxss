/* pages/index/machina/machpage/machpage.wxss */
page {
  height: 200px;
  background-image: linear-gradient(to bottom, var(--themecolor), #fff, #fff);
}

.page-video {
  width: 86%;
  height: 400rpx;
  padding: 30rpx 5%;
  margin: 50rpx 2%;
  background: #EEEEEE;
  border-radius: 10rpx;

}

.txt3 {
  width: 348rpx;
  height: 30rpx;
  overflow-wrap: break-word;
  color: rgba(51, 51, 51, 1);
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  text-align: center;
  white-space: nowrap;
  line-height: 30rpx;
  display: block;
  margin: 26rpx 0 0 117rpx;
}

.page-video video {
  width: 100%;
  height: 350rpx;
}

.formBtn {
  width: 450rpx;
  height: 86rpx;
  background: #1E5051;
  border-radius: 43rpx;
  opacity: 1;
  margin-left: 110rpx;
  bottom: 200rpx;
}

.formBtn2{
  bottom: 40rpx;
  border: 1rpx solid #1E5051;
  background-color: #fff;
  color: #1E5051;
}

.select {
  height: 26rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #1E5051;
  line-height: 125rpx;
}

/* 协议开始 */
.agreement {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  margin-top: 100rpx;
  text-align: center;
}

.agreement .black {
  color: #333;
}

.agreement .text {
  color: var(--theme1);
}

radio {
  transform: scale(.6)
}