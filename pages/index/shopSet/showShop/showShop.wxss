.headebg {
  background-color: var(--themecolor);
  height: 594rpx;
  border-image-repeat: no-repeat;
  background-size: cover;
}

.Marked {
  display: flex;
  justify-content: center;
}

.title {
  position: absolute;
  top: 454rpx;
  background-color: #fff;
  height: 280rpx;
  width: 90%;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  box-shadow: 1px 1px 5px 0px #fdf1ee;
  justify-content: center;
}

.title image {
  width: 200rpx;
  height: 120rpx;
}


.title .text {
  line-height: 50rpx;
  font-weight: 545;
  font-size: 40rpx;
  margin-left: -25rpx;
}

.title .btn {
  text-align: center;
}

.txt1 {
  padding-left: 18rpx;
}

.span1 {
  padding: 6rpx 6rpx 110rpx 6rpx;
  margin: 0 75rpx;
  border-left: 1rpx solid #eee;
  font-weight: lighter;
}

.shopInfo {
  padding: 0 4%;
  margin-top: 165rpx;
  display: flex;
  justify-content: space-between;
  height: 115rpx;
  align-items: center;
}

.logo {
  width: 112rpx;
  height: 112rpx;
  border-radius: 100%;
  margin-top: 5rpx;
}

.add-note {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #292929;
  line-height: 26rpx;
}

.address {
  font-size: 20rpx;
  color: #666;
  display: flex;
  align-items: center;
  padding: 20rpx 0 0 10rpx;
}

.adres {
  width: 14rpx;
  height: 21rpx;
}

.ads {
  width: 530rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #292929;
}

.address1 {
  padding-right: 8rpx;
  margin-left: -10rpx;
}

.address2 {
  width: 9rpx;
  height: 15rpx;
}

.marketing {
  width: 690rpx;
  height: 230rpx;
  margin: 20rpx 30rpx 0;
}


.saleItem {
  width: 270rpx;
  height: 353rpx;
  border: 2rpx solid var(--themecolor);
  /* border-image: linear-gradient(90deg, #d92e24) 2 2; */
  border-radius: 20rpx;
  position: relative;
  display: inline-block;
  margin-right: 20rpx;
}

.saleItem:first-child {
  margin-left: 30rpx;
}

.saleItem:last-child {
  margin-right: 30rpx;
}

.SaleNum {
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #989898;
  line-height: 34rpx;
  margin: 15rpx 0;
}

.price {
  color: #ff2929;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.price text {
  font-size: 20rpx;
}

.padding {
  padding: 0 8rpx;
  box-sizing: border-box;
}

.productInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx 5rpx !important;
}

.operate {
  display: flex;
  align-items: center;
  width: 58%;
  justify-content: flex-end;
}

.operateImg {
  width: 35rpx;
  height: 35rpx;
}

.priceInput {
  width: 40%;
  text-align: center;
  font-size: 26rpx;
}

.saleImg {
  width: 100%;
  height: 210rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.saleContent {
  padding: 0 3%;
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin: 20rpx -20rpx;
  margin-bottom: 10rpx;
}

.saletitle {
  display: flex;
  align-items: center;
  /* width: 690rpx; */
  margin-top: -11px;
  /* padding: 0rpx 0 20rpx; */
  position: relative;

}

.hotSale {
  height: 51rpx;
  width: 125rpx;
  margin-top: 40rpx;
  margin-left: 36rpx;
}