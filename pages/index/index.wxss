/* pages/boss/bossGuide/bossGuide.wxss */
@import "/weui.wxss";
.bottomGuide {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  z-index: 10000;
  background-color: #fff;
  height: 125rpx;
}

.bottomItem {
  width: 25%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bottomItem image {
  width: 60rpx;
  height: 60rpx;
}

.viewActivity {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}
.viewActivityed{
  color: var(--themecolor);
}
